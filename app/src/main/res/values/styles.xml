<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema general -->
    <style name="Theme.SilkRoad" parent="Theme.Material3.Light.NoActionBar">
        <!-- Mapea tu paleta -->
        <item name="colorPrimary">@color/brand_celeste</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/brand_dark</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- Tipografía -->
        <item name="fontFamily">@font/poppins</item>
        <item name="android:fontFamily">@font/poppins</item>

        <!-- Barras del sistema -->
        <item name="android:statusBarColor">@color/brand_celeste</item>
        <item name="android:navigationBarColor">@color/brand_celeste</item>
    </style>

    <!-- Botón outlined (M3) -->
    <style name="M3_OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/brand_celeste</item>
        <item name="strokeColor">@color/brand_celeste</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <!-- Botón outlined (MDC fallback) -->
    <style name="MDC_OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@color/brand_celeste</item>
        <item name="strokeColor">@color/brand_celeste</item>
        <item name="strokeWidth">1dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/transparent</item>
    </style>

</resources>