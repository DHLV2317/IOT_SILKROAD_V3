<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:backgroundTint="@color/brand_celeste"
        app:titleTextColor="@color/white" />

    <!-- â­ Mapa del guÃ­a (Google Maps) -->
    <fragment
        android:id="@+id/mapGuide"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp" />

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Status Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Estado del Tour"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:id="@+id/txtCurrentStop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parada actual: Cargando..."
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtStopCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Parada 1 de 4"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtGpsStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="GPS: Verificando..."
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/txtDemoCoordinates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coord. Demo: 0.0000, 0.0000"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="italic" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acciÃ³n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegisterLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Registrar UbicaciÃ³n Actual"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    app:backgroundTint="@color/brand_celeste" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNextStop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="âž¡ï¸ Siguiente Parada"
                    android:textSize="16sp"
                    android:layout_marginBottom="12dp"
                    android:enabled="false"
                    app:backgroundTint="@color/brand_verde" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFinishTour"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ Finalizar Tour"
                    android:textSize="16sp"
                    android:visibility="gone"
                    app:backgroundTint="@android:color/holo_orange_dark" />

            </LinearLayout>

            <!-- Historial de ubicaciones -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Historial de Ubicaciones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@android:color/black"
                        android:backgroundTint="#F5F5F5"
                        android:padding="12dp">

                        <TextView
                            android:id="@+id/txtLocationHistory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Registros de ubicaciones aparecerÃ¡n aquÃ­...\n\n"
                            android:textSize="12sp"
                            android:fontFamily="monospace"
                            android:textColor="@android:color/black" />

                    </ScrollView>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>