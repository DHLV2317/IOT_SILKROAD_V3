<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/brand_celeste"
            android:title="Agregar tarjeta"
            android:titleTextColor="@android:color/white" />

        <!-- Tarjeta "preview" sencilla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="16dp"
            android:background="#222222"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvPreviewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX XXXX XXXX XXXX"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <TextView
                android:id="@+id/tvPreviewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE APELLIDO"
                android:textColor="@android:color/white"
                android:layout_marginTop="24dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número de la tarjeta"
                android:inputType="number"
                android:maxLength="19"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alias (opcional)"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Nombre" />

                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Apellido"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/etExpiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="MM/YY"
                    android:inputType="text" />

                <EditText
                    android:id="@+id/etCvv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="CVV"
                    android:inputType="numberPassword"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cobraremos un monto aleatorio menor a S/. 5 para validar la tarjeta. Este será devuelto de inmediato (simulado)."
                android:textSize="12sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btnSaveCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:backgroundTint="@color/brand_celeste"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>